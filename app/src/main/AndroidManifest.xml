<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.UCSB.SafeRoute" >

    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_LOCATION_EXTRA_COMMANDS" />
    <uses-permission android:name="android.permission.LOCATION_HARDWARE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.example.timothymartinez.SafeRoute.LoginPage"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/google_maps_api_key" >
        </meta-data>

        <activity
            android:name="com.example.timothymartinez.SafeRoute.MakeIncidentReport"
            android:label="@string/title_activity_make_incident_report" >
        </activity>
        <activity
            android:name="com.example.timothymartinez.SafeRoute.CreateNewUserAccount"
            android:label="@string/title_activity_create_new_user_account" >
        </activity>
        <activity
            android:name="com.example.timothymartinez.SafeRoute.LaunchPage"
            android:label="@string/title_activity_login_page" >
        </activity>
    </application>

</manifest>
